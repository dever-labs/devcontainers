{
  // Definition for the python-service devcontainer image.
  // This file is used by CI to build and push the image to GHCR.
  // Service repos reference the resulting image — they do not build it themselves.
  "name": "python-service",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",

  "features": {
    // Python — pin to major.minor so patch updates flow automatically
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.13"
    },
    // uv — fast Python package and project manager
    "ghcr.io/devcontainers/features/uv:1": {
      "version": "latest"
    },
    // Docker-in-Docker — required for kind cluster nodes inside the container
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    },
    // kubectl + Helm + minikube — local cluster for developing against team helm charts
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
}
