{
  // Definition for the dotnet-service devcontainer image.
  // This file is used by CI to build and push the image to GHCR.
  // Service repos reference the resulting image — they do not build it themselves.
  "name": "dotnet-service",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",

  "features": {
    // .NET SDK — pin to major.minor so patch updates flow automatically
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "10.0"
    },
    // Docker-in-Docker — required for kind cluster nodes inside the container
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    },
    // kubectl + Helm (minikube skipped — teams use kind)
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "none"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
}
